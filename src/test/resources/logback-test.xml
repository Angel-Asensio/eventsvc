<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %5level %logger{0}:%line [%t] [%mdc] - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="de.idealo" level="info"/>

    <root level="warn">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
